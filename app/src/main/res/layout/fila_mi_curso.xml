<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewFilaNombreCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="Inteligencia Artificial" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textViewFilaProfesorCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            tools:text="Profesor xxx"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textViewDescripcionCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla vitae efficitur diam. Quisque auctor vulputate viverra. Nunc sit amet cursus ligula"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/textViewHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#aaa"
                android:text="Ma 8 - 10am"/>


            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/textViewSala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#aaa"
                android:text="B-201"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>